<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">
    <rotate
        android:fromDegrees="360"
        android:toDegrees="0"
        android:pivotY="50%"
        android:pivotX="50%"
        android:duration="500"/>
    <scale
        android:fromYScale="1"
        android:toYScale="0"
        android:fromXScale="1"
        android:pivotX="50%"
        android:pivotY="50%"
        android:toXScale="0"
        android:duration="500"/>
</set>